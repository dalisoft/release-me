{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "markdown": {
    "lineWidth": 80,
    "newLineKind": "lf",
    "textWrap": "maintain",
    "emphasisKind": "underscores",
    "strongKind": "asterisks"
  },
  "dockerfile": {
    "lineWidth": 80,
    "newLineKind": "lf"
  },
  "excludes": [".github/**/**.md"],
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.17.0.wasm",
    "https://plugins.dprint.dev/dockerfile-0.3.0.wasm"
  ]
}
